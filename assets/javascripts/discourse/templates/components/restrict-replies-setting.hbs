<section class="restrict-replies">
  <h3>Restict Replies</h3>
  <label>
    {{input type="checkbox" checked=category.custom_fields.restrict_replies}}
    {{i18n "restricted_replies.for_category"}}
  </label>
  {{#if category.custom_fields.restrict_replies}}
    {{multi-select
          content=groups
          allowAny=false
          values=category.custom_fields.restrict_replies_bypass_groups
    }}
  {{/if}}
</section>